{
  "name": "jonsstore-workers",
  "version": "1.0.0",
  "description": "Cloudflare Workers API for JonsStore E-commerce",
  "main": "src/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create jonsstore-db",
    "db:migrate": "wrangler d1 execute jonsstore-db --file=./d1-schema.sql",
    "db:local": "wrangler d1 execute jonsstore-db --local --file=./d1-schema.sql",
    "db:query": "wrangler d1 execute jonsstore-db --command",
    "db:backup": "wrangler d1 export jonsstore-db --output=backup.sql"
  },
  "dependencies": {
    "hono": "^3.12.0"
  },
  "devDependencies": {
    "wrangler": "^3.22.0"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "d1",
    "e-commerce",
    "api"
  ],
  "author": "JonsStore Team",
  "license": "MIT"
}
